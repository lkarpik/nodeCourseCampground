<% include ../includes/header %>
<div class='container-fluid p-5 bg-secondary text-center h-100'>
    <div class='row align-items-center'>
        <div class='col col-md-6 col-lg-4 mx-auto'>
            <h1>Edit Campground: <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id %>?_method=PUT", method="POST" class="mt-4">
                <div class="form-group">
                    <!--<label for="name">Name</label>-->
                    <input type="text" name="campground[name]" class="form-control" id="name" placeholder="Enter name of campground" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <!--<label for="name">Name</label>-->
                    <input type="number" name="campground[price]" class="form-control" id="price" placeholder="Price/night" value="<%= campground.price %>" min="1" step="0.1">
                </div>
                <div class="form-group">
                    <!--<label for="image">Image</label>-->
                    <input type="text" class="form-control" id="image" name="campground[img]" placeholder="Enter image link" value=" <%= campground.img %>">
                </div>
                <div class="form-group">
                    <!--<label for="image">Image</label>-->
                    <textarea class="form-control" rows="5" id="description" name="campground[description]" placeholder="Describe campground"><%= campground.description %></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Submit</button>
            </form>
        </div>
    </div>
</div>
<% include ../includes/footer %>